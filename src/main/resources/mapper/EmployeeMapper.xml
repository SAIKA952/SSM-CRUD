                </when>
                <when test="criterion.listValue">
                  and ${criterion.condition}
                  <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
<!--  不带上部门信息字段-->
  <sql id="Base_Column_List">
    emp_id, emp_name, gender, email, d_id
  </sql>
<!--  带上部门信息字段-->
  <sql id="WithDept_Column_List">
    e.emp_id, e.emp_name, e.gender, e.email, e.d_id, d.dept_id, d.dept_name
  </sql>

<!-- ================================================================= -->
<!--  使用模糊查询，根据姓名查询员工，只要姓名中有包含输入的内容或者id等于输入的内容就都可以被查出来。-->
  <select id="selectByVague" resultMap="WithDeptResultMap">
    select
    <include refid="WithDept_Column_List" />
    from tbl_emp e left join tbl_dept d
    on e.`d_id` = d.`dept_id`
    where emp_name like "%"#{empName,jdbcType=VARCHAR}"%" or emp_id = #{empId,jdbcType=INTEGER}
  </select>

